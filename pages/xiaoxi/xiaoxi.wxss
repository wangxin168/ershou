page {
  background: #f5f5f5;
  position: absolute;
  /* overflow-y: hidden; */
}

.dingbu {
  height: 100%;
  margin-top: 160rpx;
}

.top {
  width: 100%;
  background: #ffe600;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 4%;
  box-sizing: border-box;
  z-index: 10;
}
.top{
  height: 140rpx;
  line-height: 200rpx;
}
.ios{
  height: 180rpx;
  line-height: 260rpx;
}
.top view {
  width: 33.3%;
}

.top view:nth-of-type(1) image {
  width: 33rpx;
  height: 33rpx;
}

.top view:nth-of-type(2) {
  text-align: center;
  font-size: 32rpx;
  color: #060606;
}

.xiaoxi_ul {
  width: 100%;
  margin-top: 140rpx;
  overflow: hidden;
}
.xiaoxia{
  margin-top: 180rpx;
}
.xiaoxi_ul .xiaoxi {
  width: 100%;
  background: white;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #D8D8D8;
  padding: 34rpx 37rpx;
  box-sizing: border-box;
}

.xiaoxi_ul .xiaoxi image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
}

.xiaoxi_ul .xiaoxi .right {
  width: 80%;
  margin-left: 30rpx;
}
.xiaoxi_ul .xiaoxi .right .title{
  font-size: 32rpx;
  color: #060606;
}
.xiaoxi_ul .xiaoxi .right .jianjie{
  font-size: 28rpx;
  color: #8D8D8D;
  margin-top: 5rpx;
}
