

page {
  background: #f5f5f5;
  position: absolute;
  /* overflow-y: hidden; */
}

.top {
  width: 100%;
  background: #ffe600;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 4%;
  box-sizing: border-box;
  z-index: 10;
}
.top{
  height: 140rpx;
  line-height: 200rpx;
}
.ios{
  height: 180rpx;
  line-height: 260rpx;
}
.top view {
  width: 33.3%;
}

.top view:nth-of-type(1) image {
  width: 33rpx;
  height: 33rpx;
}

.top view:nth-of-type(2) {
  text-align: center;
  font-size: 32rpx;
  color: #060606;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 60rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 140rpx;
  background: white;
}
.tabxia{
  margin-top: 180rpx;
}
.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #000;
  font-weight: bold;
}

.on {
  border-bottom: 1rpx solid #ffe600;
}

.zaijia {
  width: 94%;
  display: flex;
  justify-content: space-between;
  margin: auto;
  flex-wrap: wrap;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.zaijia .zaijia_li {
  width: 49%;
  background: #fff;
  border-radius: 10px;
  height: 100%;
  padding: 0 0 16rpx 0;
  margin-bottom: 20rpx;
}
.zaijia .zaijia_li .title{
  font-size: 28rpx;
  color: #2E2E2E;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.zaijia .zaijia_li>image {
  width: 100%;
  height: 260rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.zaijia .zaijia_li .dibu {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.zaijia .zaijia_li .dibu .left {
  font-size: 28rpx;
  color: #fc6e21;
}

.zaijia .zaijia_li .dibu .right {
  font-size: 24rpx;
  color: #cbcbcb;
}

.zaijia .zaijia_li .goodname {
  font-size: 28rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  color: #2e2e2e;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.xiajia{
  width: 100%;
  margin-top: 22rpx;
  display: flex;
  justify-content: space-between;
  padding:0 10rpx;
  box-sizing:border-box;
}
.xiajia image{
  width: 100rpx;
  height: 38rpx;
}
.kong{
  width: 300rpx;
  height: 300rpx;
  display: block;
  margin: 257rpx auto;
}
