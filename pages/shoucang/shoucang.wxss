page {
  background: #f5f5f5;
  position: absolute;
  /* overflow-y: hidden; */
}
.top {
  width: 100%;
  background: #ffe600;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 4%;
  box-sizing: border-box;
  z-index: 10;
}
.top{
  height: 140rpx;
  line-height: 200rpx;
}
.ios{
  height: 180rpx;
  line-height: 260rpx;
}
.top view {
  width: 33.3%;
}

.top view:nth-of-type(1) image {
  width: 33rpx;
  height: 33rpx;
}

.top view:nth-of-type(2) {
  text-align: center;
  font-size: 32rpx;
  color: #060606;
}
.list_ul{
  width: 100%;
  margin-top: 140rpx;
  overflow: hidden;
}
.listxia{
  margin-top: 180rpx;
}
.list_ul .ul_li{
  width: 100%;
  height: 180rpx;
  margin-top: 20rpx;
  background: white;
  display: flex;
  justify-content: space-between;
  padding: 0 4%;
  box-sizing: border-box;
}
.list_ul .ul_li .left{
  width: 34%
}
.list_ul .ul_li .left image{
  width: 180rpx;
  height: 180rpx;
}
.list_ul .ul_li .right{
  width: 66%;

}
.list_ul .ul_li .right .shang{
  font-size: 34rpx;
  color: #2E2E2E;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
  margin-top: 40rpx;
}
.list_ul .ul_li .right .xia{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  align-items: center;
}
.list_ul .ul_li .right .xia .price{
  font-size: 32rpx;
  color: #FC6E21;
}
.list_ul .ul_li .right .xia .anniu{
  width: 139rpx;
  height: 45rpx;
  line-height: 45rpx;
  background: #FFE600;
  border-radius: 23.5px;
  text-align: center;
  font-size: 26rpx;
  color: #464646;
}
